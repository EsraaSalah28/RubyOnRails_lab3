<h1>Posts Listing</h1>
<br/>
<br/>
<<%= link_to  "Add Post", new_post_path %>>
<% @posts.each do |post| %>
<label> Id: </label>
<%= post.id  %>
<br/>
<label> Title: </label>
<%= post.title  %>
<br>
<label> Text: </label>
<%= post.text  %>
<br>
<label> Created at: </label>
<%= post.created_at  %>
<br>
<label> Updated at: </label>
<%= post.updated_at  %>
<br>
<%= '*' * 100 %>
<br>
<% end %>