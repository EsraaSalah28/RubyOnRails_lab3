
<h1>Edit Post</h1>
<%= form_for @post do |form| %>
 <div class="form-group">
  <p>
    <%= form.label :title    %><br>
    <%= form.text_field :title , class:"form-control" %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text , class:"form-control"%>
  </p>
 
  <p>
    <%= form.submit nil ,class:"btn btn-primary" %>
  </p>
  </div>
<% end %>